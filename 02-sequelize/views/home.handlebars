<h1>Usu√°rios Cadastrados</h1>
<div class="container">
    {{#each users}}
        <div class="item">
            <p>{{this.name}}</p>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a class="details-btn" href="/users/{{this.id}}">Ver detalhes</a>
                <a class="details-btn" href="/users/edit/{{this.id}}">Ver Editar</a>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input class="delete-btn" type="submit" value="excluir">
                </form>
            </div>
        </div>
    {{/each}}
</div>
<h1>Editando {{user.name}}</h1>

<form class="form" action="/users/update" method="post">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" name="name" class="form-control" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </div>
    <div class="form-group">
        <label for="occupation">Ocupação</label>
        <input type="text" name="occupation" class="form-control" placeholder="Digite o nome da profissão" value="{{user.occupation}}">
    </div>
    <div class="form-group form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" class="form-control" checked>
        {{else}}
            <input type="checkbox" name="newsletter" class="form-control">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite o nome da rua">
        </div>
                <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residencia">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Incluir endereço">
    </form>
    <div class="address-list">
        <h2>Lista de endereços:</h2>
        {{#each user.Addresses}}
            <div>
                #{{this.id}} - 
                {{this.street}} - 
                {{this.number}} - 
                {{this.city}}
                <form action="/address/delete" method="POST">
                    <input type="hidden" name="UserId" value="{{this.UserId}}">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>
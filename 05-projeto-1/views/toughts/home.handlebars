<div class="home-header">
    {{#if search}}
        <h1>Você esta buscando por: <span>{{search}}</span></h1>
        {{#if toughtsQty}}
            <p>foram encontrados <span>{{toughtsQty}}</span> pensamentos!</p>
        {{else}}
            <p>Nenhum pensamento encontrado para o termo <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Conheça alguns de nossos <span:>pensamentos</span:</h1>
    {{/if}}
    <h1>Todos os Pensamentos</h1>
    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Esta buscando por algo?">
        <input class="btn" type="submit" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>Por <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>
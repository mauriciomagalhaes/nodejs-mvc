<h1>Ver Todas as tarefas</h1>
<ul class="task-list">
  {{#each tasks}}
    <li>
        <a class="title" href="/">{{this.title}}</a>
        <div class="actions">
            <form action="/tasks/updatestatus" method="post">
               <input type="hidden" name="id" value="{{this.id}}"> 
               <input type="hidden" name="done" value="{{this.done}}"> 
               <button type="submit">
                   <i class="bi bi-check2"></i>
               </button>
            </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
  {{/each}}
</ul>